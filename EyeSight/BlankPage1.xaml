                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
        <!--<Border Width="48" Height="48" CornerRadius="24">
            <Image Source="http://img.wdjimg.com/image/video/ea5a5ed0a4cbf178839fa4e3906aeef0_0_0.jpeg"/>
        </Border>-->

